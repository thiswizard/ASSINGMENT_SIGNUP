generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())  // 사용자 ID
  name      String   // 사용자 이름
  password  String   // 사용자 비밀번호
  createdAt DateTime @default(now()) // 사용자 생성시간
  characters Character[] // 사용자와 연결된 캐릭터
}

model Character {
  id        Int      @id @default(autoincrement()) // 캐릭터 ID
  name      String   @unique  // 캐릭터 이름
  health    Int      @default(500) // 체력
  power     Int      @default(100) // 공격력
  money     Int      @default(10000) // 게임머니
  userId    String   // 캐릭터를 만든 사용자 ID
  user      User     @relation(fields: [userId], references: [id]) // user하고 연결
}

